---
import Layout from '../layouts/Layout.astro';
import Juega from "../components/Juega";
import Background from "../components/Background.astro";
import Carrousel from '../components/Carrousel.astro';
---

<Layout>
  <div class="welcome-container relative min-h-screen overflow-hidden bg-black opacity-100">
    <!-- GIF centrado en el fondo -->
    
    <div class="inset-0 flex items-start justify-center">
      <img 
        src="/game.gif" 
        alt="Juego" 
        class="w-auto h-auto max-w-md max-h-md opacity-100 gif-center" 
        loading="lazy"
      />
    </div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 pt-20">
      <Juega/>
      <Carrousel/>
    </div>
  </div>
</Layout>

<style>
  .welcome-container {
    position: relative;
    display: flex;
    flex-direction: column;
  }
</style>