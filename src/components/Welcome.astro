<style>
  /* Animaciones personalizadas */
  .animate-float-1 {
    top: 10%;
    left: 5%;
    animation: float 8s ease-in-out infinite;
  }

  .animate-float-2 {
    top: 20%;
    right: 10%;
    animation: float 6s ease-in-out infinite 1.5s;
  }

  .animate-float-3 {
    top: 40%;
    left: 10%;
    animation: float 7s ease-in-out infinite 3s;
  }

  .animate-float-4 {
    top: 60%;
    right: 5%;
    animation: float 9s ease-in-out infinite 4.5s;
  }

  .animate-float-5 {
    top: 80%;
    left: 20%;
    animation: float 5s ease-in-out infinite;
  }

  .animate-float-6 {
    top: 15%;
    left: 50%;
    animation: float 7.5s ease-in-out infinite 1.5s;
  }

  .animate-float-7 {
    top: 70%;
    left: 60%;
    animation: float 6.5s ease-in-out infinite 3s;
  }

  .animate-float-8 {
    top: 30%;
    right: 30%;
    animation: float 8.5s ease-in-out infinite 4.5s;
  }

  .animate-float-9 {
    top: 50%;
    left: 80%;
    animation: float 5.5s ease-in-out infinite;
  }

  .animate-float-10 {
    top: 90%;
    right: 40%;
    animation: float 7s ease-in-out infinite 1.5s;
  }

  .animate-float-11 {
    top: 5%;
    left: 75%;
    animation: float 6s ease-in-out infinite 3s;
  }

  .animate-float-12 {
    top: 85%;
    left: 40%;
    animation: float 8s ease-in-out infinite 4.5s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.1;
    }
    25% {
      transform: translateY(-20px) rotate(90deg);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-10px) rotate(180deg);
      opacity: 0.2;
    }
    75% {
      transform: translateY(-30px) rotate(270deg);
      opacity: 0.25;
    }
  }

  /* Sombras de texto personalizadas */
  .text-shadow {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  .text-shadow-lg {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }
</style>